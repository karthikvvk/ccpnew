# Application Settings
APP_NAME=VideoTranslationAPI
DEBUG=True
HOST=0.0.0.0
PORT=8000

# File Storage
OUTPUT_DIR=./outputs
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=1073741824  # 1GB in bytes

# Video Processing
FRAME_EXTRACT_FPS=1
VIDEO_CODEC=libx264
AUDIO_CODEC=aac

# Whisper Settings (Local)
WHISPER_MODEL=medium  # tiny, base, small, medium, large
WHISPER_DEVICE=cpu  # cpu or cuda (set to cuda for GPU)
WHISPER_LANGUAGE=auto

# LLM Settings (Local)
LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2
LLM_DEVICE=cpu  # cpu or cuda
LLM_MAX_LENGTH=2048
LLM_TEMPERATURE=0.7

# Vector Database
VECTOR_DB_PATH=./vector_db
EMBEDDING_MODEL=sentence-transformers/clip-ViT-B-32

# TTS Settings
TTS_SLOW=False
TTS_LANG=en

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Colab GPU Server (Optional)
USE_COLAB_GPU=False
COLAB_API_URL=
