# Application Settings
APP_NAME=VideoTranslationAPI
DEBUG=True
HOST=0.0.0.0
PORT=8000

# File Storage
OUTPUT_DIR=./outputs
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=1073741824  # 1GB in bytes

# Video Processing
FRAME_EXTRACT_FPS=2
VIDEO_CODEC=libx264
AUDIO_CODEC=aac

# Whisper Settings
WHISPER_MODEL=medium  # tiny, base, small, medium, large
WHISPER_DEVICE=cpu    # cpu or cuda
WHISPER_LANGUAGE=auto

# LLM Settings (Sentence Completion/Refinement)
# Recommended models:
#   CPU: google/flan-t5-large (783M params, fast, good quality)
#   GPU: meta-llama/Llama-3.2-1B-Instruct (if CUDA available)
LLM_MODEL=google/flan-t5-large
LLM_DEVICE=cpu
LLM_MAX_LENGTH=512
LLM_TEMPERATURE=0.3

# Vector Database
VECTOR_DB_PATH=./vector_db
EMBEDDING_MODEL=sentence-transformers/clip-ViT-B-32

# TTS Settings (gTTS - fallback when voice cloning is off)
TTS_SLOW=False
TTS_LANG=en

# Voice Cloning Settings (XTTS-v2)
# True = Clone original speaker's voice (requires more GPU/time)
# False = Use gTTS (faster, robotic voice)
USE_VOICE_CLONING=False
TTS_DEVICE=cpu  # cpu or cuda for XTTS-v2

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Colab GPU Server (Optional)
USE_COLAB_GPU=False
COLAB_API_URL=

# RAG Self-Pruning Toggle
# False = Always use RAG (testing mode)
# True = Skip RAG if confidence < 0.3 (production mode)
RAG_ENABLE_SELF_PRUNING=False
